<%@ page contentType="text/html; charset=utf-8" pageEncoding="utf-8"%>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<%@ taglib prefix="spring" uri="http://www.springframework.org/tags" %>

<script type="text/javascript">
$(document).ready(function(){
	setCookie("action", "delete");
	
	$(".save").click(function(event){
		event.preventDefault();
		$("#frmUnsubmitReason").attr("action","<c:url value='/unsubmit-reasons/doUpdate.html'/>");
		$("#frmUnsubmitReason").submit();
	});
	$(".cancel").click(function(event){
		event.preventDefault();
		$(location).attr('href',"<c:url value='/unsubmit-reasons/index.html'/>");
	});
	 $("#frmUnsubmitReason").validationEngine();
});
</script>
<div class="adminform">
	<div class="opr">
		<div class="break-crumbs">
			<a href="<c:url value='/unsubmit-reasons/index.html' />"><img src="<c:url value='/images/icon/list.png' />" align="absmiddle" alt="" /><spring:message code='lbl.unsubmit_reason_list'/></a>
		</div>
		<form id="frmUnsubmitReason" method="post" action="<c:url value='/unsubmit-reasons/doUpdate.html' />">
			<input type="hidden" name="unsubmitReasonID" id="unsubmitReasonID" value="${unsubmitReason.unsubmitReasonID}"/> 
			<fieldset>
				<legend><spring:message code='lbl.update_unsubmit_reason_information'/></legend>
				<table class="form" cellspacing="0" cellpadding="0">
					<tr>
						<td class="label"><label for="reason"><spring:message code='lbl.reason'/></label><span class="required">*</span></td>
						<td class="input"><input id="reason" name="reason"
							class="textfield unsubmitReasonName validate[required,maxSize[50],ajax[ajaxCheckUnsubmitReasonUpdate]]" type="text" value="${unsubmitReason.reason}"/></td>
					</tr>
					<tr style="vertical-align: top;">
						<td class="label"><label for="description"><spring:message code='th.description'/></label></td>
						<td class="input"><textarea name="description"
								id="description" class="textarea description">${unsubmitReason.description}</textarea></td>
					</tr>
					<tr>
						<td colspan="4" class="button">
							<button class="save"><spring:message code='button.save'/></button>
							<button class="cancel"><spring:message code='button.cancel'/></button>
						</td>
					</tr>
				</table>
			</fieldset>
		</form>
	</div>
</div>
<div class="clr"></div>