<%@ page contentType="text/html; charset=utf-8" pageEncoding="utf-8"%>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<%@ taglib prefix="spring" uri="http://www.springframework.org/tags" %>

<script type="text/javascript">
$(document).ready(function(){
	setCookie("action", "delete");
	
	$(".save").click(function(event){
		event.preventDefault();
		$("#frmTitle").attr("action","<c:url value='/titles/doUpdate.html'/>");
		$("#frmTitle").submit();
	});
	$(".cancel").click(function(event){
		event.preventDefault();
		$(location).attr('href',"<c:url value='/titles/index.html'/>");
	});
	 $("#frmTitle").validationEngine({
        /*  isOverflown: true,
         overflownDiv: ".ui-taps-panel", */
     });
});
</script>
<div class="adminform">
	<div class="opr">
		<div class="break-crumbs">
			<a href="<c:url value='/titles/index.html' />"><img src="<c:url value='/images/icon/list.png' />" align="absmiddle" alt="" /><spring:message code='lbl.title_list'/></a>
		</div>
		<form id="frmTitle" method="post" action="<c:url value='/titles/doUpdate.html' />">
			<input type="hidden" name="titleID" id="titleID" value="${title.titleID}"/> 
			<fieldset>
				<legend><spring:message code='lbl.update_title_information'/></legend>
				<table class="form" cellspacing="0" cellpadding="0">
					<tr>
						<td class="label"><label for="titleName"><spring:message code='th.title'/></label><span class="required">*</span></td>
						<td class="input"><input id="titleName" name="titleName"
							class="textfield titleName validate[required,maxSize[50],ajax[ajaxCheckTitleUpdate]]" type="text" value="${title.titleName}"/></td>
						<td class="label"><label for="grade"><spring:message code='th.grade'/></label><span class="required">*</span></td>
						<td class="input"><input id="grade" name="grade"
							class="textfield grade validate[required,maxSize[30]]" type="text" value="${title.grade}"/></td>
					</tr>
					<tr style="vertical-align: top;">
						<td class="label"><label for="description"><spring:message code='th.description'/></label></td>
						<td class="input"><textarea name="description"
								id="description" class="textarea description">${title.description}</textarea></td>
					</tr>
					<tr>
						<td colspan="4" class="button">
							<button class="save"><spring:message code='button.save'/></button>
							<button class="cancel"><spring:message code='button.cancel'/></button>
						</td>
					</tr>
				</table>
			</fieldset>
		</form>
	</div>
</div>
<div class="clr"></div>