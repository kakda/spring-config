<%@ page contentType="text/html; charset=utf-8" pageEncoding="utf-8"%>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<%@ taglib prefix="spring" uri="http://www.springframework.org/tags" %>

<script type="text/javascript">
	var autoSearch;
	$(window).load(function(){
		autoSearch = $("#autoSearch").attr('checked') ? true : false;
	});
	$(document).ready(function() {
		 $(".btnDeleteSelected").click(function(event){
			event.preventDefault();
		 	deleteSelctedRow("#unsubmitReasonList", "<c:url value='/unsubmit-reasons/doDelete/' />", 'unsubmitReasonID');
		 });
		$(".addNew").click(function(event){
			event.preventDefault();
			window.location = "<c:url value='/unsubmit-reasons/add.html' />";
		});
		$("#unsubmitReasonList").jqGrid(
						{
							url : "<c:url value='/unsubmit-reasons/ajaxGrid.html'/>",
							datatype : 'json',
							mtype : 'GET',
							colNames : [ '<spring:message code="th.action"/>', '<spring:message code="th.id"/>',
									'<spring:message code="lbl.reason"/>', '<spring:message code="th.description"/>' ],
							colModel : [ {
								name : 'act',
								index : 'act',
								width : 10,
								sortable : false,
								search: false
							}, {
								name : 'unsubmitReasonID',
								index : 'unsubmitReasonID',
								width : 6
							}, {
								name : 'reason',
								index : 'reason',
								width : 35
							}, {
								name : 'description',
								index : 'description',
								width : 49
							} ],
							postData : {},
							rowNum : 10,
							rowList : [ 10, 20, 40, 60, 100 ],
							height : 200,
							autowidth : true,
							rownumbers : true,
							pager : '#unsubmitReasonPage',
							sortname : 'unsubmitReasonID',
							viewrecords : true,
							sortorder : "asc",
							caption : "",
							emptyrecords : "Empty records",
							loadonce : false,
							multiselect : true,
							height: 230,
							page : getPageNumber("pageNumber"),
							multiboxonly:true,
							loadComplete : function() {
							},
							jsonReader : {
								page : "page",
								total : "total",
								records : "records",
								root : "rows",
								repeatitems : false
							},
							gridComplete : function() {
					            gridAction("#unsubmitReasonList", "<c:url value='/unsubmit-reasons/' />", "unsubmitReasonID", true, true, true)
					            setCookie("pageNumber", $('#unsubmitReasonList').getGridParam('page'));
							}
						});
		$("#unsubmitReasonList").jqGrid('navGrid', '#unsubmitReasonPage', {
			edit : false,
			add : false,
			del : false,
			search : true
		}, {}, {}, {}, { // search
			sopt : [ 'cn', 'eq' ],
			closeOnEscape : true,
			multipleSearch : false,
			closeAfterSearch : true,
			position: "center"
		});
		
		$("#btnSearch").click(function(event){
			event.preventDefault();	
			gridReload();
		});
		$("#fieldValue").keydown(function(){
			if(autoSearch){
				setTimeout(gridReload,500);	
			} 			
		});
		$("#fieldName").change(function(){
			if(autoSearch){
				setTimeout(gridReload,500);	
			}
		});
		$("#autoSearch").change(function(){
			autoSearch = $(this).attr('checked');
		});
	});
	function gridReload(){ 
		var fieldName =  $("#fieldName").val();
		var fieldValue =  $("#fieldValue").val();
		$("#unsubmitReasonList").jqGrid('setGridParam',
		{
			url:"<c:url value='/unsubmit-reasons/ajaxGrid.html'/>",
			page:1,
			mtype: "GET",
			search: true,
			postData: {
				searchOper: function(){
					return "cn";
				},
				searchField: function(){
					return fieldName;
				},
				searchString: function(){
					return fieldValue;
				}
			}
		}).trigger("reloadGrid"); 
	} 
</script>
<div class="adminform">
	<div class="opr">
		<form action="">
		<div class="title"><spring:message code='lbl.unsubmit_reason_management'/></div>
			<fieldset>
				<legend><spring:message code='lbl.filter'/></legend>
				<table class="form" >
					<tr>
						<td class="input">
							<input type="text" class="textfield" id="fieldValue" />
						</td>
						<td>
							<select id="fieldName" class="select-single" style="width: 200px">
								<option value="unsubmitReasonID">ID</option>
								<option value="reason" selected="selected"><spring:message code='lbl.reason'/></option>
							</select>
						</td>
						<td>
							<input type="checkbox" id="autoSearch" />
						</td>
						<td>
							<label for="autoSearch"><spring:message code='lbl.auto'/></label>
						</td>
						<td>
							<button id="btnSearch" class="search"><spring:message code='button.search'/></button>
						</td>
					</tr>
				</table> 
			</fieldset>
		</form>
		<form action="">
			<fieldset>
				<legend><spring:message code='lbl.unsubmit_reason_list'/></legend>
				<div>
					<table id="unsubmitReasonList"></table>
					<div id="unsubmitReasonPage"></div>
					<div>
						<button class="btnDeleteSelected delete"><spring:message code='button.delete'/></button>
						<button class="addNew add"><spring:message code='button.add'/></button>
					</div>
				</div>
			</fieldset>
		</form>
	</div>
</div>
<div class="clr"></div>