<!-- Chamroeun -->
<%@ page contentType="text/html; charset=utf-8" pageEncoding="utf-8"%>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<%@ taglib prefix="spring" uri="http://www.springframework.org/tags" %>

<script type="text/javascript">
$(document).ready(function(){
	setCookie("action", "delete");
	
	$(".save").click(function(event){
		event.preventDefault();
		$("#frmCustomer").attr("action","<c:url value='/customers/doUpdate.html'/>");
		$("#frmCustomer").submit();
	});
	$(".cancel").click(function(event){
		event.preventDefault();
		$(location).attr('href',"<c:url value='/customers/index.html'/>");
	});
	 $("#frmCustomer").validationEngine({
         /* ajaxFormValidation: true  */
     });
});
</script>
<div class="adminform">
	<div class="break-crumbs">
  		<a href="<c:url value='/customers/index.html' />"><img src="<c:url value='/images/icon/list.png' />" align="absmiddle" alt="" /><spring:message code='lbl.customer_list'/></a>
  	</div>
	<div class="opr">
		<form id="frmCustomer" method="post" action="<c:url value='/customers/doUpdate.html' />">
			<input type="hidden" name="customerID" id="customerID" value="${customer.customerID}"/> 
			<fieldset>
				<legend><spring:message code='lbl.update_customer_information' /></legend>
				<table class="form" cellspacing="0" cellpadding="0">
					<tr>
						<td class="label"><label for="customerNameEn"><spring:message code='th.english_name'/></label><span class="blue required">*</span></td>
						<td class="input"><input id="customerNameEn" name="customerNameEn"
							class="textfield validate[groupRequired[customerName], maxSize[50]]"
							value="${customer.customerNameEn}" type="text" /></td>
						<td class="label"><label for="customerNameKr"><spring:message code='th.korean_name'/></label><span class="blue required">*</span></td>
						<td class="input"><input id="customerNameKr" name="customerNameKr"
							class="textfield validate[groupRequired[customerName], maxSize[50]]"
							value="${customer.customerNameKr}" type="text" /></td>
					</tr>
					<tr>
						<td class="label"><label for="industry"><spring:message code='lbl.industry'/></label></td>
						<td class="input"><input id="industry" name="industry"
							class="textfield validate[maxSize[50]]"
							value="${customer.industry}" type="text" /></td>
					</tr>
					<tr style="vertical-align: top;">
						<td class="label"><label for="address"><spring:message code='lbl.address'/></label></td>
						<td class="input" colspan="3"><textarea name="address"
								id="address" style="width: 100%" class="textarea description">${customer.address}</textarea></td>
					</tr>
					<tr style="vertical-align: top;">
						<td class="label"><label for="description"><spring:message code='th.description'/></label></td>
						<td class="input" colspan="3"><textarea name="description"
								id="description" style="width: 100%" class="textarea description">${customer.description}</textarea></td>
					</tr>
					<tr>
						<td class="label"><label for="contactName"><spring:message code='th.contact_name'/></label><span class="required">*</span></td>
						<td class="input"><input id="contactName" name="contactName"
							class="textfield validate[required, maxSize[50]]"
							value="${customer.contactName}" type="text" /></td>
							<td class="label"><label for="contactMobilePhone"><spring:message code='lbl.mobile_phone'/></label></td>
						<td class="input"><input id="contactMobilePhone" name="contactMobilePhone"
							class="textfield validate[maxSize[15]]"
							value="${customer.contactMobilePhone}" type="text" /></td>
					</tr>
					<tr>
						<td class="label"><label for="contactCompanyPhone"><spring:message code='lbl.company_phone'/></label></td>
						<td class="input"><input id="contactCompanyPhone" name="contactCompanyPhone"
							class="textfield validate[maxSize[15]]"
							value="${customer.contactCompanyPhone}" type="text" /></td>
							<td class="label"><label for="contactEmail"><spring:message code='th.email'/></label><span class="required">*</span></td>
						<td class="input"><input id="contactEmail" name="contactEmail"
							class="textfield validate[required, custom[email], maxSize[50]]"
							value="${customer.contactEmail}" type="text" /></td>
					</tr>
					<tr>
						<td colspan="4" class="button">
							<button class="save"><spring:message code='button.save'/></button>
							<button class="cancel"><spring:message code='button.cancel'/></button>
						</td>
					</tr>
				</table>
			</fieldset>
		</form>
	</div>
</div>
<div class="clr"></div>